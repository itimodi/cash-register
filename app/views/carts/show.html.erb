<div>
  <h1>Shopping Cart</h1>
  <h4><%= link_to 'Continue Shopping ->', products_path %></h4>
</div>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Product Name</th>
        <th scope="col">Price </th>
        <th scope="col"> Action</th>
        <th scope="col">Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item, price| %>
        <%= render 'cart_item', cart_item: cart_item, price: price %>
      <% end %>
    </tbody>
  </table>
  <h3 class="text-right m-10">Total: <%= format_price(total_price(@cart_items)) %></h3>
<% end %>
